<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_page.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_page.home"), home_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t("user.all-book"), books_path %></li>
          <li><%= link_to t("user.all-user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t "User" %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.profile"), activities_path(user_id: current_user.id) %></li>
              <li><%= link_to t("user.favorite"), "#" %></li>
              <li><%= link_to t("user.reading"), "#" %></li>
              <li><%= link_to t("user.request"), requests_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to t("static_page.log_out"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
          <% if current_user.admin? %>
            <li><%= link_to t("user.administration"), admin_root_path %></li>
          <% end %>
        <% else %>
          <li><%= link_to t("static_page.log_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
